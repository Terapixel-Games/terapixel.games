---
const { pathname = '/games' } = Astro.props;

const links = [
  { href: '/games', label: 'Games' },
  { href: '/contact', label: 'Contact' }
];
---

<header class="sticky top-0 z-50 border-b border-border/80 bg-surface/95 backdrop-blur">
  <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-4 py-4">
    <a href="/games" class="text-lg font-semibold tracking-tight">Terapixel Games</a>
    <nav aria-label="Main navigation">
      <ul class="flex items-center gap-2">
        {
          links.map((link) => {
            const active = pathname === link.href || (link.href === '/games' && pathname === '/');
            return (
              <li>
                <a
                  href={link.href}
                  class:list={[
                    'rounded-md px-3 py-2 text-sm transition-colors',
                    active ? 'bg-zinc-200 text-zinc-950' : 'text-zinc-300 hover:bg-panel hover:text-zinc-100'
                  ]}
                >
                  {link.label}
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>
  </div>
</header>
