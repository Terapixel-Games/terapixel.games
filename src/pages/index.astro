---
import BaseLayout from '../layouts/BaseLayout.astro';
import GameCard from '../components/GameCard.astro';
import games from '../data/games.json';
import type { Game } from '../types';

const gameList = games as Game[];
---

<BaseLayout title="Games" description="Explore Terapixel Games and play directly in your browser.">
  <section class="space-y-10">
    <h1 class="text-center text-6xl font-light text-zinc-900">Games</h1>
    <div class="grid gap-x-10 gap-y-12 sm:grid-cols-2 lg:grid-cols-3">
      {gameList.map((game) => <GameCard game={game} playMode="fullscreen" />)}
    </div>
  </section>
</BaseLayout>
