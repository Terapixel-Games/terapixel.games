---
import BaseLayout from '../layouts/BaseLayout.astro';
import GameCard from '../components/GameCard.astro';
import games from '../data/games.json';
import type { Game } from '../types';

const gameList = games as Game[];
---

<BaseLayout title="Games" description="Explore the Terapixel Games platform and play browser games instantly.">
  <div class="shell stack">
    <header class="page-head">
      <h1 class="page-title">Games</h1>
      <p class="page-copy">
        Unified cards, clear status, and no visual noise. Pick a game and play now, or open details first.
      </p>
    </header>

    <section aria-label="All games" class="section-block">
      <div class="game-grid">
        {gameList.map((game) => <GameCard game={game} playMode="fullscreen" />)}
      </div>
    </section>
  </div>
</BaseLayout>
