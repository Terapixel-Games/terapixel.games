---
import '../styles/global.css';
import Nav from '../components/Nav.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'Play browser games from Terapixel Games.', image = '/images/games/lumarush.jpg' } = Astro.props;

// Canonical URLs are generated from astro.config.mjs site = https://terapixel.games
const canonicalHref = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : Astro.url.toString();
const imageHref = Astro.site ? new URL(image, Astro.site).toString() : new URL(image, Astro.url).toString();
const socialTitle = `${title} | Terapixel Games`;
const authNakamaBaseUrl =
  import.meta.env.PUBLIC_TPX_AUTH_NAKAMA_BASE_URL || 'https://lumarush-nakama.onrender.com';
const authNakamaServerKey =
  import.meta.env.PUBLIC_TPX_AUTH_NAKAMA_SERVER_KEY || '';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{socialTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalHref} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Terapixel Games" />
    <meta property="og:title" content={socialTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalHref} />
    <meta property="og:image" content={imageHref} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={socialTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageHref} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8413230766502262"
      crossorigin="anonymous"
    ></script>
    <script is:inline>
      window.__TPX_AUTH_CONFIG = {
        nakamaBaseUrl: {JSON.stringify(authNakamaBaseUrl)},
        nakamaServerKey: {JSON.stringify(authNakamaServerKey)},
        authGameId: 'lumarush',
        authPlatform: 'terapixel'
      };
    </script>
    <script src="/scripts/terapixel-identity.js" defer></script>
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-white text-zinc-900 antialiased">
    <Nav pathname={Astro.url.pathname} />
    <main class="mx-auto w-full max-w-6xl px-4 py-12">
      <slot />
    </main>
    <footer class="border-t border-zinc-200 py-8">
      <div class="mx-auto flex w-full max-w-6xl flex-wrap items-center justify-between gap-4 px-4 text-sm text-zinc-600">
        <p>&copy; {new Date().getFullYear()} Terapixel Games</p>
        <div class="flex items-center gap-4">
          <a href="/privacy-policy" class="underline underline-offset-4 hover:text-zinc-900">Privacy Policy</a>
          <a href="/contact" class="underline underline-offset-4 hover:text-zinc-900">Contact</a>
        </div>
      </div>
    </footer>
  </body>
</html>
