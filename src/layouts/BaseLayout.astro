---
import '../styles/global.css';
import Nav from '../components/Nav.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'Play browser games from Terapixel Games.', image = '/images/games/lumarush.jpg' } = Astro.props;

// Canonical URLs are generated from astro.config.mjs site = https://terapixel.games
const canonicalHref = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : Astro.url.toString();
const imageHref = Astro.site ? new URL(image, Astro.site).toString() : new URL(image, Astro.url).toString();
const socialTitle = `${title} | Terapixel Games`;
const identityLoginUrl = import.meta.env.PUBLIC_TPX_IDENTITY_LOGIN_URL || '';
const identityLogoutUrl = import.meta.env.PUBLIC_TPX_IDENTITY_LOGOUT_URL || '';
const identitySessionUrl = import.meta.env.PUBLIC_TPX_IDENTITY_SESSION_URL || '';
const identityReturnParam = import.meta.env.PUBLIC_TPX_IDENTITY_RETURN_PARAM || 'return_to';
const identityEmailParam = import.meta.env.PUBLIC_TPX_IDENTITY_EMAIL_PARAM || 'email';
const identityLogoutMethod = import.meta.env.PUBLIC_TPX_IDENTITY_LOGOUT_METHOD || 'POST';
const identityHydrateSessionOnLoad =
  import.meta.env.PUBLIC_TPX_IDENTITY_HYDRATE_SESSION_ON_LOAD || 'true';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{socialTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalHref} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Terapixel Games" />
    <meta property="og:title" content={socialTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalHref} />
    <meta property="og:image" content={imageHref} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={socialTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageHref} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&family=Sora:wght@500;600;700&display=swap"
      rel="stylesheet"
    />
    
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8413230766502262"
      crossorigin="anonymous"
    ></script>
    <script is:inline>
      window.__TPX_AUTH_CONFIG = {
        loginUrl: {JSON.stringify(identityLoginUrl)},
        logoutUrl: {JSON.stringify(identityLogoutUrl)},
        sessionUrl: {JSON.stringify(identitySessionUrl)},
        returnParam: {JSON.stringify(identityReturnParam)},
        emailParam: {JSON.stringify(identityEmailParam)},
        logoutMethod: {JSON.stringify(identityLogoutMethod)},
        hydrateFromSessionOnLoad: {JSON.stringify(identityHydrateSessionOnLoad)}
      };
    </script>
    <script src="/scripts/terapixel-identity.js" defer></script>
    <slot name="head" />
  </head>
  <body class="site-body">
    <a href="#main-content" class="skip-link">Skip to content</a>
    <Nav pathname={Astro.url.pathname} />
    <main id="main-content" class="site-main">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="shell footer-row">
        <p>&copy; {new Date().getFullYear()} Terapixel Games</p>
        <div class="footer-links">
          <a href="/privacy-policy">Privacy Policy</a>
          <a href="/support">Support</a>
          <a href="/contact">Contact</a>
        </div>
      </div>
    </footer>
  </body>
</html>
